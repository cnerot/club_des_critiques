{% extends "::entity.html.twig" %}

{% block title %}EntityBundle:Categorie:view{% endblock %}
{% block javascript %}
    <script>
        $(".button-collapse").sideNav();
    </script>
{% endblock %}

{% block body %}
<div class="row">
<div class="margin-top">
    <div class="col m12">
        <div class="row">

            <div class="col s6">
                <div class="row">
                    <div class="col s12">
                       <ul id="slide-out" class="side-nav teal lighten-4 margin-top-side">
                           <li><b>Recherche par filtre</b></li>
                            <li><form action="#" method="post">
                                <input type="hidden" name="catrgory_id" value="{{ categorie.id }}">
                                {% for attribute in categorie.attributes %}
                                        {{ include('EntityBundle:Categorie:attribute/input.html.twig',{
                                            "attribute":attribute,
                                            "value":0,
                                        }) }}
                                {% endfor %}
                           <input type="submit" value="search" class="btn waves-effect waves-light">

                            </form></li>

                        </ul>
                        <a href="#" data-activates="slide-out" class="button-collapse btn-floating btn-large brown lighten-3"><i class="material-icons">search</i></a>
                    </div>
                </div>
            </div>
            <form method="post" action="#">
                <input type="hidden" name="catrgory_id" value="{{ categorie.id }}">
                <div class="input-field col s4 ">
                    <input type="text" name="search" class="validate right">
                    <label for="search">Rechercher</label>
                </div>
                <div class="input-field  col s2">
                    <input type="submit" value="Rechercher" class="btn waves-effect waves-light right" >
                </div>
            </form>
        </div>

    </div>
    </div>
</div>

   <div class="container">
        <div class="row">
            <h3>Categorie : {{ categorie.name }}</h3>
                <div class="col s12 ">
                    {% for products in categorie_products %}
                        <div class="col s3">
                            {{ include('EntityBundle:Entity:card.html.twig',{
                                "product":products,
                            }) }}
                        </div>
                    {% endfor %}
                </div>
        </div>
    </div>
{% endblock %}
