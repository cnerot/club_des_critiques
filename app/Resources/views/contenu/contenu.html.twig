{% extends 'base.html.twig' %}

{% block title %}
    Contenu
{% endblock %}


{% block body %}
    <div class="row margin-top">
        <div class="col l12 col m12 col s12 col xs12">
            <div class="container">
                <h1 class="titleS">Contenue par categorie</h1><br>
                {% for categorie in categories %}
                    <div class="col l3 col m6">
                        <a href="{{ path("search", {"id":categorie.id}) }}">
                            <div class="panel panel-primary teal lighten-2">
                                <div class="panel-heading">
                                    <div class="row">
                                        <div class="col s5">
                                            {% if categorie.name=="CD" or categorie.name=="cds" or categorie.name=="cd" %}
                                                <i class="material-icons white-text medium">album</i>
                                            {% elseif categorie.name=="cinema" or categorie.name=="movies" or categorie.name=="movie" or categorie.name=="film" %}
                                                <i class="material-icons white-text medium">movie</i>
                                            {% elseif categorie.name=="livre" or categorie.name=="book" or categorie.name=="roman" %}
                                                <i class="material-icons white-text medium">book</i>
                                            {% elseif categorie.name=="jeu" %}
                                                 <i class="material-icons white-text medium">Game</i>
                                            {% else %}
                                                <i class="material-icons white-text medium">book</i>
                                            {% endif %}
                                        </div>
                                        <div class="col s7">
                                            <div class="huge white-text"> <b>{{ categorie_products[categorie.id] | length }}</b></div>
                                            <div class="white-text">{{ categorie.name }}</div>
                                        </div>
                                    </div>
                                </div>
                                <a href="{{ path("search", {"id":categorie.id}) }}">
                                    <div class="panel-footer">
                                        <span class="left brown-text lighten-1">Details</span>
                                        <span class="right"><i class="material-icons brown-text lighten-1 tiny">arrow
                                                forward</i></span>
                                        <div class="clearfix"></div>
                                    </div>
                                </a>
                            </div>
                        </a>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
