					{% for salon in salons %}
						{% if "now"|date('Ymd') > salon.dateFin.date|date('Ymd') %}							
							{% set period = 'past' %}							  
						{% elseif "now"|date('Ymd') < salon.dateDebut.date|date('Ymd') %}
							{% set period = 'next' %}
						{% else %}
							{% set period = 'current' %}
						{% endif %}
						
						<tr class="{{ period }}">
							  <td>
									{{ salon.titreSalon }}
							  </td>
							  <td>
								 <abbr title="{{ salon.dateDebut.date|date('d/m/Y') }}">
