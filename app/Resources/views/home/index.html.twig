{% extends 'base.html.twig' %}

{% block body %}


    <div class="row">
        <div>
        <div class="col s8">
           <div class="myContainer justify">
                <div id="">
                    <p>
                        {{ concept }}
                    </p>
                </div>
           </div>
        </div>
        <div  class="col s4 right-align">
            {% if id_membre == null %}
                <div class="card">
                    <div class="card-content">
                        {% if mailExist !=null %}
                            <p>{{mailExist}}</p>
                        {% endif %}
                        {{ form_start(email) }}
                            <div class="left-align">
                                <p>Inscrez-vous :</p><br>
                                {{ form_rest(email)}}
                            </div>
                            <div class="right-align">
                                <button class="btn waves-effect waves-light" type="submit">Ok</button>
                            </div>
                        {{ form_end(email)}}
                    </div>
                </div>
                 <div class="card">
                     <div class="card-content">
                            #menu flotant
                            <br>
                            prochain salon :
                            <br> A ajouter par gaetan
                       </div>
                    </div>
            {% else %}
                <div  class="col s12">
                            <div class="card">
                                <div class="card-content">
                                   #menu flotant
                                   <br>
                                   prochain salon :
                                   <br> A ajouter par gaetan
                                </div>
                            </div>
                </div>
            {% endif %}
                  </div>

        </div>
        <div class="col s12">
            <hr>
        </div>
        <div class="col s12">
            <p><b>A la une :</b></p>
            {% for products in productsTop %}
                <div class="col s3">
                    {{ include('EntityBundle:Entity:card.html.twig',{
                        "product":products,
                    }) }}
                </div>
            {% endfor %}
        </div>
        <div class="col s12">
            <hr>
        </div>
        <div class="col s12">
            <p><b>Nous Contactez :</b></p>
            <div class="row">
                <div class="col s3">
                </div>
                <div class="col s6">
                    {{ form_start(form) }}
                        <div class="input-field">
                            <label>Nom :</label>
                            <input type="text" class="validate" name="nom"> 
                        </div>
                        <div class="input-field">
                            <label>E-mail :</label>
                            <input type="text" class="validate" name="mail"> 
                        </div>

                        {{ form_rest(form) }}
                        <div class="right">
                            <button class="btn waves-effect waves-light" type="submit" name="action">Envoyer
                                <i class="material-icons right">send</i>
                            </button>
                        </div>
                    {{ form_end(form) }}
                </div>
                <div class="col s3">
                </div>          
            </div>
        </div>
    </div>
    
{% endblock %}

